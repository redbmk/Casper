{
    "parser": "babel-eslint",
    "extends": "airbnb",
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.4"
        }
    },
    "globals": {
        "window": true,
        "document": true
    },
    "rules": {
        "indent": ["error", 4],
        "react/forbid-prop-types": 0,
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [".js", ".jsx"]
            }
        ],
        "jsx-a11y/href-no-hash": 0,
        "jsx-a11y/anchor-is-valid": ["error", {
            "components": ["Link"],
            "specialLink": ["to"],
            "aspects": ["noHref", "invalidHref", "preferButton"]
        }]
    }
}
